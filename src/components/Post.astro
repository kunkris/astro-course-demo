---
import { Image } from "astro:assets";
import {type CollectionEntry } from "astro:content";

type Props = {
	post: CollectionEntry<"posts">;
};
const { post } = Astro.props;

---

<article>
    <a href={`/blog/${post.id}`}>
        <Image src={post.data.image}
            width={600} 
            height={600/1.5} 
            alt={post.data.title}/>
    </a>
    <a 
        href={`/blog/${post.id}`}
        class="text-4xl text-zinc-600 font-semibold inline-block"
    >
        <h2>{post.data.title}</h2>
    </a>
    <p class="text-zinc-500 text-2xl line-clamp-2">
        {post.body}
    </p>
</article>


